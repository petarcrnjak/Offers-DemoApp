@model ImportViewModel

@{
    ViewData["Title"] = "Unos liste ponuda";
}

<h2>Uvoz ponuda iz Excel datoteke</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form id="importForm" asp-controller="Offers" asp-action="ImportData" method="post" enctype="multipart/form-data" class="import-form">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="ExcelFile" class="control-label"></label>
        <input asp-for="ExcelFile" type="file" class="form-control" accept=".xlsx,.xls"/>
        <span asp-validation-for="ExcelFile" class="text-danger"></span>
    </div>

    <button id="importSubmit" type="submit" class="btn btn-primary mt-3">Uvezi podatke</button>
</form>

<!-- Minimal text-only loading message -->
<div id="loadingText" style="display:none; position:fixed; inset:0; z-index:1050; align-items:center; justify-content:center; background:rgba(0,0,0,0.35); color:#fff; font-size:1.125rem;">
    Učitavanje, molimo sačekajte...
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

@if (Model?.ImportResult != null)
{
    <div class="mt-4">
        <h4>Rezultat uvoza - @Model.ImportResult.ProcessedDate.ToString("dd.MM.yyyy hh:MM:ss")</h4>

        <div class="alert @(Model.ImportResult.Errors.Any() ? "alert-warning" : "alert-success")">
            @if (Model.ImportResult.SuccessCount > 0)
            {
                <p><strong>Uspješno uvezeno:</strong> @Model.ImportResult.SuccessCount stavki</p>
            }

            @if (Model.ImportResult.Errors.Any())
            {
                <p><strong>Greške:</strong> @Model.ImportResult.Errors.Count redova s greškama</p>
            }
        </div>

        @if (Model.ImportResult.Errors.Any())
        {
            <div class="card border-danger mt-3">
                <div class="card-header bg-danger text-white">
                    Detalji grešaka
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                        <tr>
                            <th>Red</th>
                            <th>Greške</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var error in Model.ImportResult.Errors)
                        {
                            <tr>
                                <td>@error.RowNumber</td>
                                <td>
                                    <ul class="mb-0">
                                        @foreach (var msg in error.Errors)
                                        {
                                            <li>@msg</li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Minimal, easy JS: show loading text only when the form will actually submit
        (function () {
            const form = document.getElementById('importForm');
            const loading = document.getElementById('loadingText');
            const submit = document.getElementById('importSubmit');
            if (!form) return;

            form.addEventListener('submit', function (e) {
                const file = form.querySelector('input[type="file"]');
                if (!file || !file.files || file.files.length === 0) {
                    // rely on existing validation message (server/client) — just focus file input and stop submit
                    file && file.focus();
                    e.preventDefault();
                    return;
                }

                // let browser or unobtrusive validation run first; if invalid, don't show loading
                if (typeof form.checkValidity === 'function' && !form.checkValidity()) {
                    return; // browser will show validation messages
                }

                // show loading and prevent double submit
                loading.style.display = 'flex';
                if (submit) submit.disabled = true;
                // allow normal POST to continue
            });
        })();
    </script>
}
