@model PaginatedOffersViewModel
<h1>Pregled ponuda</h1>


@if (Model.Offers.Count != 0)
{
    <div class="table-responsive" style="min-height: 200px;">
        <table class="table">
            <thead>
            <tr>
                <th>Broj ponude:</th>
                <th>Datum ponude</th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            @foreach (var offer in Model.Offers)
            {
                <tr>
                    <td>
                        <a asp-action="CreateEdit" asp-route-id="@offer.Id">@offer.Id</a>
                    </td>
                    <td>@offer.Date</td>
                </tr>
            }

            </tbody>
        </table>

    </div>
}
else
{
    <p>Nema dostupnih ponuda.</p>
}

@if (Model.TotalPages > 1)
{
    <div class="pagination">
        <!-- First Page -->
        @if (Model.CurrentPage > 1)
        {
            <a class="page-link" href="@Url.Action("Index", new { pageIndex = 1 })">Prva</a>
        }

        <!-- Previous Page -->
        @if (Model.CurrentPage > 1)
        {
            <a class="page-link" href="@Url.Action("Index", new { pageIndex = Model.CurrentPage - 1 })">Prethodna</a>
        }

        <!-- Page Numbers -->
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <a class="page-link @(i == Model.CurrentPage ? "active" : "")"
               href="@Url.Action("Index", new { pageIndex = i })">@i</a>
        }

        <!-- Next Page -->
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a class="page-link" href="@Url.Action("Index", new { pageIndex = Model.CurrentPage + 1 })">SljedeÄ‡a</a>
        }

        <!-- Last Page -->
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a class="page-link" href="@Url.Action("Index", new { pageIndex = Model.TotalPages })">Zadnja</a>
        }
    </div>
}
